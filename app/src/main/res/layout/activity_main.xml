<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/txtItemToPurchase"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Item to Purchase:"
        android:textSize="18dp"
        android:textColor="@android:color/holo_red_dark"
        android:textStyle="bold"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="30dp"
        />

    <EditText
        android:id="@+id/editTextItemToPurchase"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:layout_toRightOf="@id/txtItemToPurchase"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        />

    <TextView
        android:id="@+id/txtPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Price:"
        android:textSize="18dp"
        android:textColor="@android:color/holo_red_dark"
        android:textStyle="bold"
        android:layout_below="@id/txtItemToPurchase"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="30dp"
        />

    <EditText
        android:id="@+id/editTextPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:layout_toRightOf="@id/txtPrice"
        android:layout_below="@id/editTextItemToPurchase"
        android:layout_alignStart="@id/editTextItemToPurchase"
        />

</RelativeLayout>